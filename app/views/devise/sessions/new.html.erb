
<div class="form-background">
  <div class="form-container">
    <div class="form">
      <h1>Log in</h1>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
         <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email",class: "form-control" }, label_html:{ class: "label-font"} %>
        </div>
        <div class="form-group">
         <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password",class: "form-control" }, label_html:{ class: "label-font"} %>
        </div>
        <div class="form-group">
             <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <%= f.button :submit, "Log in", class: "btn btn-primary custom-btn" %>
      <% end %>
    </div>
  </div>
</div>
